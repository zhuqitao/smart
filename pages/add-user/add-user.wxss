page {
  background-color: #f0f0f0
}
.add-user {
  padding: 20rpx;
  background-color: #ffffff;
  font-size: 14px;
}
.add-user>label{
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.add-user label input {
  flex: 1;
  border: solid 1px #ddd;
  padding: 10rpx;
  border-radius: 10rpx
}

.sex label, .type label{
  min-width: 400rpx;
}
.add-user .submit{
  margin: 30rpx 0 10rpx 0;
}